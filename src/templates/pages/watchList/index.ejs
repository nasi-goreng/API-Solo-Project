<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Ghibli API</title>
    <style>
      table {
        float: left;
        width: 50%;
        padding: 5px;
        text-align: center;
      }
    </style>
  </head>
  <h1>Studio Ghibli Films</h1>
  <form action="/watchlist/update" method="POST">
    <div class="form-field">
      <input id="id" name="id" type="number" />
      <button type="submit">Watched!</button>
    </div>
  </form>
  <table>
    <thead>
      <th scope="col">To Watch</th>
    </thead>
    <tbody>
      <% for (const film of watchedFilms) { %> <% if (!film.watched) { %>
      <tr>
        <td><%= film.id %>. <%= film.title %></td>
      </tr>
      <% } %> <% } %>
    </tbody>
    <table>
      <thead>
        <th scope="col">Watched</th>
      </thead>
      <tbody>
        <% for (const film of watchedFilms) { %> 
          <% if (film.watched) { %>
        <tr>
          <td><%= film.id %>. <%= film.title %></td>
        </tr>
        <% } %> <% } %>
      </tbody>
    </table>
  </table>
</html>
